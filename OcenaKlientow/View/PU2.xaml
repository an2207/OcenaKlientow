<Page
    x:Class="OcenaKlientow.View.PU2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OcenaKlientow.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="1280" Background="GhostWhite">
            <RichTextBlock HorizontalAlignment="Left" Height="40" Margin="41,0,0,0" VerticalAlignment="Top"  FontSize="25" Width="405" >
                <Paragraph>
                    <Run Text="Przeglądaj statusy klientów"/>
                </Paragraph>
            </RichTextBlock>
        </Grid>
        <Grid Background="White" HorizontalAlignment="Left" Height="332" Margin="0,140,0,0" VerticalAlignment="Top" Width="636">
            <Grid Background="White" Height="92" VerticalAlignment="Top" Margin="0,-92,0,0" HorizontalAlignment="Left" Width="636">
                <TextBox x:Name="IdPrawna" PlaceholderText="ID" HorizontalAlignment="Left" Margin="36,29,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="25" Width="119" RenderTransformOrigin="0.092,0.641"/>
                <TextBox x:Name="NazwaPrawna" PlaceholderText="Nazwa" HorizontalAlignment="Left" Margin="185,29,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="207"/>
                <Button x:Name="SearchPrawna" Click="SearchPrawna_OnClick" Content="Szukaj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="435,29,0,0" Width="112"/>
            </Grid>
            <ListView x:Name="OsobyPrawne" Background="White" Margin="38,0,36,57"  IsItemClickEnabled="True" SelectionChanged="OsobyPrawne_OnSelectionChanged" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.Header>
                    <Style TargetType="ListViewHeaderItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListView.Header>
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Height="30" Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Uid="tbRank" TextWrapping="Wrap" Text="ID" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0" FontWeight="Medium" FontSize="15" />
                            <TextBlock x:Uid="tbName" TextWrapping="Wrap" Text="Nazwa" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"  FontWeight="Medium" FontSize="15" />
                            <TextBlock x:Uid="tbTaxId" TextWrapping="Wrap" Text="NIP" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0" FontWeight="Medium" FontSize="15" />
                            <TextBlock x:Uid="tbCommand" TextWrapping="Wrap" Text="Status" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0" FontWeight="Medium" FontSize="15" />
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="30" Background="GhostWhite">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="NoWrap"  Text="{Binding KlientId}" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"   FontSize="11"  />
                            <TextBlock TextWrapping="NoWrap" Text="{Binding Nazwa}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"  FontSize="11"/>
                            <TextBlock TextWrapping="NoWrap" Text="{Binding NIP}" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"   FontSize="11"/>
                            <TextBlock TextWrapping="NoWrap" Text="{Binding NazwaStatusu}" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"   FontSize="11"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <Grid Height="100" Width="100"/>
                <Grid Height="100" Width="100"/>
            </ListView>
            <Grid Background="White" Height="92" VerticalAlignment="Top" Margin="636,-92,-641,0" HorizontalAlignment="Left" Width="641">
                <TextBox x:Name="IdFizyczna" PlaceholderText="ID" HorizontalAlignment="Left" Margin="37,29,0,0"  TextWrapping="Wrap"  VerticalAlignment="Top" Height="25" Width="118" RenderTransformOrigin="0.092,0.641"/>
                <TextBox x:Name="NazwaFizyczna" PlaceholderText="Nazwisko" HorizontalAlignment="Left" Margin="185,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="207"/>
                <Button x:Name="SearchFizyczna" Click="SearchFizyczna_OnClick" Content="Szukaj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="435,29,0,0" Width="112"/>
                <Button x:Name="button" Content="x" Click="Button_OnClick" Background="GhostWhite"  HorizontalAlignment="Left" Margin="578,-47,0,0" VerticalAlignment="Top" Height="44" Width="58"  FontSize="28" RenderTransformOrigin="1.775,0.069" />
            </Grid>
        </Grid>
        <Grid Background="White" BorderThickness="3" BorderBrush="LightGray" HorizontalAlignment="Left" Height="238" Margin="46,472,0,0" VerticalAlignment="Top" Width="1174">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="14,14,0,0" TextWrapping="Wrap" Text="Szczegóły oceny" VerticalAlignment="Top" Height="28" Width="142" FontWeight="Medium" FontSize="17"/>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="289,33,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="289,78,0,0" TextWrapping="Wrap" Text="Data nadania" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="289,123,0,0" TextWrapping="Wrap" Text="Liczba punktów" VerticalAlignment="Top"/>
            <TextBox x:Name="StatusNameBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="450,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <TextBox x:Name="StatusDateBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="450,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <TextBox x:Name="StatusBoxPkt" IsReadOnly ="True" HorizontalAlignment="Left" Margin="450,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
            <Button x:Name="CountStatus" Click="CountStatus_OnClick" Content="Przelicz status" HorizontalAlignment="Left" Margin="674,43,0,0" VerticalAlignment="Top" Width="240"/>
            <Button x:Name="GradeDetails"  Click="GradeDetails_OnClick" Content="Zobacz szczegóły oceny" HorizontalAlignment="Left" Margin="674,101,0,0" VerticalAlignment="Top" Width="240"/>
            <Button x:Name="CountAllStatuses" Click="CountAllStatuses_OnClick" Content="Przelicz wszystkie statusy" HorizontalAlignment="Left" Margin="517,181,0,0" VerticalAlignment="Top" Width="240"/>
        </Grid>
        <Grid Background="White" HorizontalAlignment="Left" Height="332" Margin="636,140,0,0" VerticalAlignment="Top" Width="644">

            <ListView x:Name="OsobyFizyczne" Background="White" Margin="38,0,36,57" IsItemClickEnabled="True" SelectionChanged="OsobyFizyczne_OnSelectionChanged" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.Header>
                    <Style TargetType="ListViewHeaderItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    </Style>
                </ListView.Header>
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Height="30" Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Uid="tbRank" TextWrapping="Wrap" Text="ID" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0" FontWeight="Medium" FontSize="15" />
                            <TextBlock x:Uid="tbName" TextWrapping="Wrap" Text="Imię" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"  FontWeight="Medium" FontSize="15" />
                            <TextBlock x:Uid="tbTaxId" TextWrapping="Wrap" Text="Nazwisko" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0" FontWeight="Medium" FontSize="15" />
                            <TextBlock x:Uid="tbCommand" TextWrapping="Wrap" Text="Status" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0" FontWeight="Medium" FontSize="15" />
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="30" Background="GhostWhite">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="NoWrap"  Text="{Binding KlientId}" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"   FontSize="11"  />
                            <TextBlock TextWrapping="NoWrap" Text="{Binding Imie}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"  FontSize="11"/>
                            <TextBlock TextWrapping="NoWrap" Text="{Binding Nazwisko}" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"   FontSize="11"/>
                            <TextBlock TextWrapping="NoWrap" Text="{Binding NazwaStatusu}" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="7,2,0,0"   FontSize="11"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <Grid Height="100" Width="100"/>
                <Grid Height="100" Width="100"/>
            </ListView>
        </Grid>

    </Grid>
</Page>
